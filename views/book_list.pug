extends layout

block content
  .container
    h1 List Books
    .row
      .col-xs-12.col-sm-12.col-md-12.col-lg-12
        table.table.table-bordered.table-hover
          thead
            tr
              th  Book Title
              th  Author Name
          tbody
           each book in book_list
             tr
               td
                 li
                   a(href=book.url) #{book.title}
               td #{book.author.name}          
           else
             li there are no books      


  .container#cont_list_books
